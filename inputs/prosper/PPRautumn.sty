\fi

% The fonts
\FontTitle{%
  \usefont{T1}{ptm}{b}{n}\fontsize{20.74pt}{20pt}\selectfont\colC}{%
  \usefont{T1}{ptm}{b}{n}\fontsize{20.74pt}{20pt}\selectfont\colC}
